- content_for :nav do
  .well.context-menu
    %ul.nav.nav-list
      %li.nav-header Actions
      %li
        %a{ href: '#add_comment_modal', data: {toggle: 'modal'}}
          %i.icon-comment
          Add Comment

%h2
  = @request
.row-fluid
  .span4
    %dl.dl-horizontal
      %dt Status
      %dd
        %span.label
          = @request.status
      %dt System
      %dd 
        = @request.system
      %dt Requested By
      %dd 
        = @request.requester
      %dt Requested On
      %dd 
        = @request.created_at.strftime "%B #{@request.created_at.day.ordinalize}, %Y at %l:%M%P"
      %dt Assigned To
      %dd 
        = @request.assignee ? @request.assignee : 'Unassigned'
  .span4
%h5
  Description
= @request.description

#add_comment_modal.modal.hide.fade
  .modal-header
    %h3 Add Comment
  .modal-body
    One fine
  .modal-footer
    %a.btn{href: '#', data: {dismiss: 'modal'}}
      Close
    = link_to 'Add Comment', request_comments_url(@request.id), class: 'btn btn-primary'
