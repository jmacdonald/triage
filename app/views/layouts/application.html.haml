!!! 5
%html
  %head
    %title Manzier
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-static-top
      .navbar-inner
        %a.brand{ :href => '#' } Manzier
        - if current_user
          %ul.nav
            %li.active
              = link_to 'Home', root_url
            %li
              = link_to 'Requests', requests_url
            %li
              %a{ :href => '#' } Assignments
          %ul.nav.pull-right
            %li
              = link_to 'Logout', destroy_user_session_url, :method => :delete
        - else
          %ul.nav.pull-right
            %li
              = link_to 'Login', new_user_session_url
    .container-fluid
      .row-fluid
        .span2
        .span10
          / Flash messages
          - if flash[:notice]
            .alert.alert-info
              = flash[:notice]
          - if flash[:alert]
            .alert.alert-error
              = flash[:alert]
          - if flash[:error]
            .alert.alert-error
              = flash[:error]
          = yield
